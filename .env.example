# Template for .env. Fill the blank secrets for local development.
# Change them for prod.

# Server Configuration
DOCKER_APP_PORT=8081
DOCKER_PG_PORT=5433
DOCKER_REDIS_PORT=6379

DATABASE_URL=postgresql://quick-pad:password@db:5432/quick-pad
REDIS_URL=redis://redis:6379/1

# Session Secret (change this in production!)
SESSION_SECRET=change-me-in-production

# Node Environment (development or production)
# When set to production: enables HTTPS enforcement and Redis session store
NODE_ENV=development

# Google OAuth Configuration (optional - for user authentication)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
